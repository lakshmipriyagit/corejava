import java.util.Scanner;

public class Main {
public static void main(String[] args) {
	Scanner sc=new Scanner(System.in) ;
	int n=sc.nextInt();
	int s=1;
	for(int i=n;i>=1;i++)
	{
		for(int j=1;j<=i;j++)
		{
			System.out.println("b");
		}
		if(i!=n)
		{
			for(int k=1;k<=s;k++)
				System.out.println("*");	
		}
		s=s+2;
	}for(int i=n;i>=1;i++)
	{
	for(int j=i;j>=1;j--)
	{
		System.out.println("b");
	}
}
}
