import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		System.out.println("Enter an integer");
		Scanner sc=new Scanner(System.in);
		int x=sc.nextInt();
		Integer ob=new Integer(x);
	System.out.println("The binary equivalant of "+ob+"is "+ob.toBinaryString(ob));
	System.out.println("The hexadecimal equivalant of "+ob+"is "+ob.toHexString(ob)+"c");
	System.out.println("The octal equivalant of "+ob+"is "+ob.toOctalString(ob));
	System.out.println("Byte value of "+ob+"is "+ob.byteValue());
	System.out.println("Sho value of "+ob+"is "+ob.shortValue());
	System.out.println("Byte value of "+ob+"is "+ob.longValue());
	System.out.println("Byte value of "+ob+"is "+ob.doubleValue());
	
}
}
